{
  "name": "darkpetrol",
  "displayName": "Dark Petrol",
  "description": "Custom color theme for vscode revolving around the colour of dark petrol",
  "publisher": "pp7rd",
  "repository": "https://github.com/pp7rd/dark-petrol-vscode.git",
  "version": "0.0.4",
  "icon": "images/dark-petrol-vsce.png",
  "devDependencies": {
    "@commitlint/cli": "^17.5.0",
    "@commitlint/config-conventional": "^17.4.4",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@vscode/vsce": "^2.18.0",
    "husky": "^8.0.3",
    "prettier": "^2.8.7",
    "pretty-quick": "^3.1.3"
  },
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Themes"
  ],
  "contributes": {
    "themes": [
      {
        "label": "Dark Petrol",
        "uiTheme": "vs-dark",
        "path": "./themes/Dark Petrol-color-theme.json"
      }
    ]
  },
  "private": true,
  "release": {
    "branches": [
      "main"
    ],
    "tagFormat": "${version}",
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json"
          ]
        }
      ]
    ]
  },
  "scripts": {
    "package": "vsce package -o ${npm_package_name}_${npm_package_version}.vsix",
    "publish": "vsce publish --yarn"
  }
}
